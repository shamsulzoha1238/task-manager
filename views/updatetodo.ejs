<form
    class="m-auto w-25 mt-5"
    action="/updatetodo/<%= todo._id %>"
    method="post"
>
    <h1 class="mb-4">Update Todo Page</h1>
    <input
        class="form-control mb-3"
        type="text"
        placeholder="title"
        name="title"
        value="<%= todo.title%>"
    />
    <textarea
        name="description"
        placeholder="enter text here..."
        class="form-control"
    >
<%= todo.description%></textarea
    >
    <button class="mt-3 btn btn-primary w-25">Update</button>
    <p>Want to go to homepage ? <a href="/home">Home</a></p>
</form>

